<resources>    <style name="AppBaseTheme" parent="android:Theme.Light"></style> <!-- Application theme. -->    <style name="AppTheme" parent="AppBaseTheme"> <!-- All customizations that are NOT specific to a particular API-level can go here. -->    </style>    <style name="MyImageButton">        <item name="android:layout_width">35dip</item>        <item name="android:layout_height">35dip</item>        <item name="android:background">#0000</item>        <item name="android:clickable">false</item>        <item name="android:scaleType">fitXY</item>    </style>    <style name="MyTextView">        <item name="android:layout_width">wrap_content</item>        <item name="android:layout_height">wrap_content</item>        <item name="android:background">#0000</item>        <item name="android:clickable">false</item>        <item name="android:textSize">12sp</item>        <item name="android:textColor">@color/font_gray</item>    </style>    <style name="MyLinearLayout">        <item name="android:layout_width">0dip</item>        <item name="android:layout_height">match_parent</item>        <item name="android:layout_weight">1</item>        <item name="android:descendantFocusability">beforeDescendants</item>        <item name="android:gravity">center</item>        <item name="android:orientation">vertical</item>        <item name="android:layout_marginLeft">15dip</item>        <item name="android:layout_marginRight">15dip</item>    </style></resources>